# Oura Ring Personal Access Token
# Get it from: https://cloud.ouraring.com/personal-access-tokens
OURA_ACCESS_TOKEN=your_oura_token_here

# Discord Webhook URL (定期通知用)
# Create it in: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/xxxxx

# Discord Webhook debug (optional, 1 to log non-204 responses)
DISCORD_WEBHOOK_DEBUG=0

# Discord Bot Token (会話型Bot用)
# Get it from: https://discord.com/developers/applications
# 1. Create Application > Bot > Reset Token
# 2. Enable "Message Content Intent" in Bot settings
DISCORD_BOT_TOKEN=your_bot_token_here

# Daily steps goal (optional, default: 8000)
DAILY_STEPS_GOAL=8000
